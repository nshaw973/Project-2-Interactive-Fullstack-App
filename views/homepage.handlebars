<div class="hero h-auto md:h-96" style="background-image: url(/images/merchandise.png);">
    <div class="hero-overlay bg-opacity-70"></div>
    <div class="hero-content text-center">
        <div class="max-w-md">
        <h1 class="mb-5 text-2xl md:text-3xl font-bold text-lime-500">SHOPPING MADE EASY</h1>
        <p class="mb-5 text-md md:text-xl text-white">Marketplace provides a forum to buy and sell your favorite products</p>
        <button class="btn btn-sm md:btn-lg" onclick="window.location.href='/api/search?term=all'">Shop Now</button>
        </div>
    </div>
</div>

<div class ="flex flex-wrap md:justify-center">
    {{#each products as |product|}}
    <div class = "card card-side w-full md:w-2/3 h-72 md:h-64 m-2 bg-base-100 shadow-xl">
        <figure class = "w-4/5 md:w-1/3">
            <img class = "md:object-scale-down" src = "{{product.thumbnail}}" alt = "productPicture">
        </figure>
        <div class = "card-body p-3 md:w-2/3">
            <p class = "card-title text-md md:text-2xl">
                <a href = "https://www.google.com/">
                    <label for="{{generateId 'name'}}">{{product.product_name}}</label>
                    <input type="text" name="name" id="{{generateId 'name'}}">
                </a>
            </p>
            <p class = "text-xs md:text-lg">{{this.description}}
                <label for="{{generateId 'description'}}">{{product.description}}</label>
                <input type="text" name="description" id="{{generateId 'description'}}">                
            </p>
            <p class = "text-xl md:text-2xl font-semiboldl">
                <a href = "https://www.yahoo.com/">
                    <label for="{{generateId 'price'}}">Price: ${{product.price}}</label>
                    <input type="text" name="price" id="{{generateId 'price'}}">
                </a>
            </p>
            {{!-- <p class = "text-xs md:text-lg line-through">{{this.listPrice}}</p>
            <p class = "text-xs md:text-lg">{{this.discount}}</p> --}}
            <div class = "card-actions justify-end">
                <button class = "btn btn-accent btn-sm carts addToCartButton" id = "add-to-cart"  data-id="{{product.id}}">Add to Cart</button>
            </div>
        </div>
    </div>
{{/each}}
</div>

<script src='js/cartscript.js'></script>

