<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Group 3 Marketplace!!!</title>
    {{! Reset file to reset browser custom styling }}
    {{! tailwind }}
    <link href="https://cdn.jsdelivr.net/npm/daisyui@2.51.5/dist/full.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel='stylesheet' href='/css/reset.css' />
    <link rel='stylesheet' href='/css/style.css' />
  </head>
  <body>
    <header>
      <nav class='navbar flex-wrap mb-12 pb-6' style="border-bottom: 2px black solid; " >
        <div class='flex justify-between w-full py-2 px-2'>
          <label
            tabindex='0'
            class='btn btn-ghost btn-rectangle max-w-md'
            onclick="window.location.href='/'"
          >
            <div class='w-40 md:w-6/12 lg:w-9/12'>
              <img
                class='object-contain'
                src='https://group-3-marketplace.herokuapp.com/images/name-only.png'
              />
            </div>
          </label>
          <div class='flex justify-evenly items-center w-150 px-2 md:w-96'>
            <div
              class='btn btn-ghost btn-circle md:justify-start w-10 mx-3'
              onclick="window.location.href='/carts'"
            >
              <img src='https://group-3-marketplace.herokuapp.com/images/logo-cart.png' />

            </div>
            {{#if loggedIn}}
              <div class='dropdown dropdown-end'>
                <label tabindex='0' class='btn btn-ghost btn-circle avatar'>
                  <div class='w-24 rounded-full'>
                    <img src='{{imagePath}}' />
                  </div>
                </label>
                <ul
                  tabindex='0'
                  class='mt-3 p-2 shadow menu menu-compact dropdown-content bg-base-100 rounded-box w-32'
                >
                  <li><a class='text-xl md:text-2xl' href='/carts'>Cart</a></li>
                  <li><a
                      class='text-xl md:text-2xl'
                      href='/account'
                    >Account</a></li>
                  <li><button
                      class='text-xl md:text-2xl'
                      href='/'
                      id='logout-link'
                    >Logout</button></li>
                </ul>
              </div>
            {{else}}
              <a
                class='text-xl font-semibold invisible md:visible w-0 md:w-auto lg:text-2xl'
                href='/login'
              >Login</a>
            {{/if}}
          </div>
        </div>
        <div class='flex justify-center w-full'>
          <div class='dropdown dropdown-bottom'>
            <label
              tabindex='0'
              class='btn btn-ghost btn-outline btn-xs sm:invisible'
            >
              <div class='w-5'>
                <img
                  class='object-contain'
                  src='https://group-3-marketplace.herokuapp.com/images/down-arrow.png'
                />
              </div>
            </label>
            <label
              tabindex='0'
              class='btn invisible w-0 m-0 p-0 h-0 sm:visible md:btn-md sm:m-1 sm:w-auto sm:h-auto sm:p-2 md:text-lg'
            >Categories</label>
            <ul
              tabindex='0'
              class='dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52 h-52 overflow-y-scroll'
              id='category-list'
            >

            </ul>
          </div>
          <div class='form-control w-7/12 md:w-6/12 px-2'>
            <input
              type='text'
              placeholder='Search'
              class='input input-bordered shadow input-md md:input-lg'
              id='search-input'
            />
          </div>
          <label
            tabindex='0'
            class='btn btn-ghost btn-outline md:btn-md m-1 md:text-lg'
            id='search-button'
          >
            <div class='w-5'>
              <img
                class='object-contain'
                src='https://group-3-marketplace.herokuapp.com/images/logo-search.png'
              />
            </div>
          </label>
        </div>
      </nav>
    </header>

    {{{body}}}

    <footer
      class='footer footer-center p-10 bg-base-200 text-base-content rounded'
    >
      <div class='grid grid-flow-col gap-4'>
        <a class='link link-hover font-semibold text-lg' href='/'>Home</a>
        {{#if loggedIn}}
        <a
          class='link link-hover font-semibold text-lg'
          href='/account'
        >Account</a>
        {{/if}}
        <a class='link link-hover font-semibold text-lg' href='/carts'>Cart</a>
        <a
          class='link link-hover font-semibold text-lg'
          href='/orders'
        >Orders</a>
      </div>
      <div>
        <p class='font-semibold text-lg'>Copyright Â© 2023 - All right reserved
          by Team 3</p>
      </div>
    </footer>
    {{! Add more .js files for either login, logout, etc }}
    <script
      src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js'
    ></script>
    <script src='/js/logout.js'></script>
    <script src='{{script}}'></script>
    <script src='/js/navbar.js'></script>


  </body>
</html>