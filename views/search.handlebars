
{{#if resultAvailable}}
    <div class ="flex flex-wrap md:justify-center">
        {{#each searchResults}}
        <div class = "card card-side w-full md:w-2/3 h-72 md:h-64 m-2 bg-base-100 shadow-xl">
            <figure class = "w-4/5 md:w-1/3">
                <img class = "md:object-scale-down" src = "{{this.thumbnail}}">
            </figure>
            <div class = "card-body p-3 md:w-2/3">
                <p class = "card-title text-md md:text-2xl"><a href = "https://www.google.com/">{{this.title}}</a></p>
                <p class = "text-xs md:text-lg">{{this.description}}</p>
                <p class = "text-xl md:text-2xl font-semiboldl"><a href = "https://www.yahoo.com/">${{this.price}}</a></p>
                <p class = "text-xs md:text-lg line-through">{{this.listPrice}}</p>
                <p class = "text-xs md:text-lg">{{this.discount}}</p>
                <div class = "card-actions justify-end">
                    <button class = "btn btn-accent btn-sm" id = "add-to-cart">Add to Cart</button>
                </div>
            </div>
        </div>
    {{/each}}
    </div>
{{else}}
    <div class="flex justify-center">
        <div class="flex flex-col">
            <img src="https://group-3-marketplace.herokuapp.com/images/logo-signage.png" class="max-w-sm rounded-lg shadow-2xl" />
            <div class = "mt-6">
                <h1 class="text-center text-4xl font-semibold">No Results Found</h1>
                <p class="text-center text-xl py-6">Sorry! Try another search term.</p>
            </div>
        </div>
    </div>
{{/if}}    
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="{{searchScript}}"></script>
