
{{#if resultAvailable}}
    <div class ="flex flex-wrap md:justify-center">
        {{#each products as |product|}}
            <div class = "card card-side w-full md:w-2/3 h-72 md:h-64 m-2 bg-base-100 shadow-xl">
                <figure class = "w-2/5 md:w-1/3">
                    <img class = "md:object-scale-down" src = "{{product.thumbnail}}" alt = "productPicture">
                </figure>
                <div class = "card-body p-3 w-3/5 md:w-2/3">
                    <p class = "card-title text-md md:text-2xl">
                            <label for="{{generateId 'name'}}">{{product.title}}</label>
                            <input class = "w-0 h-0" type="text" name="name" id="{{generateId 'name'}}">
                    </p>
                    <p class = "text-xs md:text-lg">
                        <label for="{{generateId 'description'}}">{{product.description}}</label>
                        <input class = "w-0 h-0" type="text" name="description" id="{{generateId 'description'}}">                
                    </p>
                    <p class = "text-xl md:text-2xl font-semibold">
                        <label for="{{generateId 'price'}}">Price: ${{product.price}}</label>
                        <input class = "w-0 h-0" type="text" name="price" id="{{generateId 'price'}}">
                    </p>
                    <p class = "text-xs md:text-lg line-through">List Price: ${{product.listPrice}}</p>
                    <p class = "text-xs md:text-lg">{{product.discountPercentage}} % off!</p>
                    <div class = "card-actions justify-end">
                        <button class = "btn btn-accent btn-sm carts addToCartButton" id = "add-to-cart" onclick = "addToCart()" data-id="{{product.id}}">Add to Cart</button>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{else}}
    <div class="flex justify-center">
        <div class="flex flex-col">
            <img src="https://group-3-marketplace.herokuapp.com/images/logo-signage.png" class="max-w-sm rounded-lg shadow-2xl" />
            <div class = "mt-6">
                <h1 class="text-center text-4xl font-semibold">No Results Found</h1>
                <p class="text-center text-xl py-6">Sorry! Try another search term.</p>
            </div>
        </div>
    </div>
{{/if}}    
